<div class="container-fluid">    
<h1>My Media</h1>
<p class= "text-center">
<%= link_to 'Upload a new Media', new_post_path , class: "btn btn-primary" , data: { no_turbolink: true } %>
</p>
<br>
<div class="center">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(post.image.url), post %>
          <div class="caption">
            <h3 class="text-center"><%= post.name %></h3>
            <p class="text-center"><%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %> </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


</div>
<%= render 'layouts/footer' %>