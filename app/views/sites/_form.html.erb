<%= form_for(site) do |f| %>
    <% if @site.errors.any? %>
    <div id="error-explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h4>

      <ul>
      <% @site.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "Panera Bread" %>
  </div>
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: "form-control", placeholder: "201 Brookline Avenue, Boston, MA 02215" %>
  </div>

   <div class="form-group">
    <%= f.label "Number of Displays" %><br>
    <%= f.number_field :displayNumber, class: "form-control",placeholder: "0"%>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>
     <div class="form-group">
    <%= f.label "Price" %><br>
    <%= f.number_field :price, class: "form-control",placeholder: "0"%>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>




<% end %>
